---
batch_connect:
  template: "basic"
  conn_params:
    - ood_need_token
    - csrftoken
script:
  queue_name: <%= auto_queues %>
  wall_time: <%= bc_num_hours.to_i() * 3600 %> 
  native:
    - "-N"
    - "1"
    - "--ntasks-per-node"
    - "<%= bc_num_cores.blank? ? 1 : bc_num_cores.to_i %>"
    - "--mem"
    - "<%= bc_num_memory.blank? ? 6144 : bc_num_memory.to_i*1024 %>"
