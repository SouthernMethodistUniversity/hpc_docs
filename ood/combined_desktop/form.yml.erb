---

title: "Remote Desktop"
cluster: "m3cluster"
submit: submit.yml.erb

form:
  - auto_queues
  - desktop_env
  - bc_num_hours
  - bc_vnc_idle: 2700
  - bc_num_cores
  - bc_num_memory
  - bc_vnc_resolution

attributes:
  bc_num_hours:
    id: bc_num_hours
    label: Time (Hours)
    help: |
      - Number of hours to allocate (maximum 12 hours)
      - Exceeding walltime time will automaticaly stop this job.
    cacheable: true
    widget: number_field
    max: 12
    min: 1
    step: 1
    value: 1
  bc_num_cores:
    id: num_cpus
    label: "Cores per node"
    help: Number of CPU threads
    cacheable: true
    widget: number_field
    max: 36
    min: 1
    value: 1
  bc_num_memory:
    id: num_mem
    label: "Memory"
    help: "Please select the amount of memory (in GB) you need for your job."
    widget: number_field
    max: 250
    min: 1
    step: 1
    value: 6
  bc_vnc_resolution:
    required: true
  node_type: null
  desktop_env:
    label: "Desktop Environment"
    help: |
      Select the desktop environment you would like to use. This changes how the desktop appears,
      but the underlying system is the same in all cases. 
    widget: select
    options:
      - [ "Mate",       "mate" ]
      - [ "Gnome 3",    "gnome"]
      - [ "Xfce",       "xfce"]
