---

title: "Remote Desktop"
cluster: "m3cluster"
submit: submit.yml.erb

form:
  - custom_queues
  - desktop_env
  - bc_num_hours
  - bc_vnc_idle
  - bc_num_cores
  - bc_num_memory
  - bc_vnc_resolution

attributes:
  custom_queues:
    label: "Partition"
    widget: select
    help: |
      Please select the SLURM partition to submit the job to.
    options:
      - ["Development Queue (2 hour limit)", "dev",
        data-max-bc-num-hours: 2,
        ]
      - ["Standard Memory Queue (12 hour limit)", "standard-s",
        data-max-bc-num-hours: 12,
        ]
      - ["High Memory Queue (12 hour limit)", "highmem",
        data-max-bc-num-hours: 12,
        ]
  bc_vnc_idle: 2700
  bc_num_hours:
    id: bc_num_hours
    label: Time (Hours)
    help: |
      - Number of hours to allocate (maximum 12 hours)
      - Exceeding walltime time will automaticaly stop this job.
    cacheable: true
    widget: number_field
    max: 12
    min: 1
    step: 1
    value: 1
  bc_num_cores:
    id: num_cpus
    label: "Cores per node"
    help: Number of CPU threads
    cacheable: true
    widget: number_field
    max: 128
    min: 1
    value: 1
  bc_num_memory:
    id: num_mem
    label: "Memory"
    help: "Please select the amount of memory (in GB) you need for your job."
    widget: number_field
    max: 500
    min: 1
    step: 1
    value: 6
  bc_vnc_resolution:
    required: true
  desktop_env: "mate"
