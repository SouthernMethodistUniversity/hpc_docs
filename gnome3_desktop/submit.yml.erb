<%- if bc_num_gpus.to_i != 0 -%>
<% image="/hpc/applications/containers/gnome3.3-nvidia.sif" %>
<%- else -%>
<% image="/hpc/applications/containers/gnome3.3.sif" %>
<%- end -%>
---
script:
  job_name: "gnome3_desktop"
  queue_name: <%= custom_queue %>
  native:
    - "--cpus-per-task"
    - "<%= bc_num_cores.blank? ? 1 : bc_num_cores.to_i %>"
    <%- if bc_num_gpus.to_i != 0 -%>
    - "--gres"
    - "gpu:<%= bc_num_gpus.blank? ? 0 : bc_num_gpus.to_i %>"
    <%- end -%>
    - "--mem"
    - "<%= bc_num_memory.blank? ? 4096 : bc_num_memory.to_i*1024 %>"
  template: "vnc"
batch_connect:
  template: "vnc"
  websockify_cmd: '/usr/bin/websockify'
  header: |
    #!/bin/bash
    . ~/.bashrc
  script_wrapper: |
    module purge
    module load singularity/3.8.2
    cat << "CTRSCRIPT" > container.sh
    export PATH="$PATH:/opt/TurboVNC/bin"
    %s  
    CTRSCRIPT

    export SINGULARITY_BINDPATH="$HOME,/run,/tmp,/hpc,$SCRATCH,$WORK"

    singularity exec --nv <%= image %> /bin/bash container.sh
