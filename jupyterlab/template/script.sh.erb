#!/usr/bin/env bash

# Benchmark info
echo "TIMING - Starting main script at: $(date)"

# Set working directory to home directory
cd "${HOME}"

#
# Start Jupyter Notebook Server
#

# Purge the module environment to avoid conflicts
module purge

# Clustom module paths
<%- unless context.module_paths.blank? -%>
<%= context.module_paths %>
env
<%- end -%>

<%- unless context.modules.blank? -%>
# Load the require modules
module load <%= context.modules.encode(universal_newline: true) %>
# List loaded modules
<%- end -%>

# Clustom environment
<%- unless context.environment.blank? -%>
<%= context.environment.encode(universal_newline: true) %>
env
<%- end -%>

if ! command -v jupyter-lab &> /dev/null
then
  echo "Jupyter Lab not found, using default."
  module load python/3
fi

module list

# Benchmark info
echo "TIMING - Starting jupyter at: $(date)"

# Launch the Jupyter Notebook Server
set -x
jupyter lab --config="${CONFIG_FILE}"
