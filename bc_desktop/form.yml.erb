---
cluster: "slurm_cluster"
form:
  - bc_vnc_idle
  - desktop
#  - bc_account
  - bc_num_hours
  - bc_num_slots
  - bc_num_cores
  - bc_num_memory
  - node_type
  - custom_queue
  - bc_vnc_resolution
  - bc_email_on_started

attributes:
  desktop: "mate"
  bc_vnc_idle: 0
  bc_vnc_resolution:
    required: true
  bc_num_slots: 1
  custom_queue:
    required: true
    widget: select
    label: "Queue"
    help: "Choose the appropriate desktop queue."
    options:
      - [ "Regular Node", "desktop" ]
      - [ "VDI Node", "desktop-vdi" ]
      - [ "VDI Node - Development (Restricted)", "desktop-vdi-dev" ]
    value: "desktop"
  node_type: null
  bc_num_hours:
    id: bc_num_hours
    label: Time (Hours)
    help: |
      - Number of hours to allocate
      - Exceeding walltime time will automaticaly stop this job.
    cacheable: true
    widget: number_field
    max: 24
    min: 1
    step: 1
    value: 1
  bc_num_cores:
    id: num_cpus
    label: "Cores per node"
    help: Number of CPU threads
    cacheable: true
    widget: number_field
    max: 36
    min: 1
    value: 1
  bc_num_gpus:
    id: num_gpus
    label: "GPUs per node"
    help: Number of GPUs or CUDA devices
    cacheable: true
    widget: number_field
    max: 1
    min: 0
    step: 1
    value: 0
  bc_num_memory:
    id: num_mem
    label: "Memory"
    help: "Please select the amount of memory (in GB) you need for your job."
    widget: number_field
    max: 250
    min: 1
    step: 1
    value: 6
